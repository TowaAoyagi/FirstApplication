<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.kamiture.kamui.haikupost.MainActivity">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/kamiku"
        android:maxLength="6"
        android:hint="4～6文字"
        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_below="@+id/kamiku"
        android:layout_alignEnd="@+id/kamiku"
        android:id="@+id/nakaku"
        android:maxLength="8"
        android:hint="6～8文字"
        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_below="@+id/nakaku"
        android:layout_alignEnd="@+id/nakaku"
        android:id="@+id/simoku"
        android:maxLength="6"
        android:hint="4～6文字"
        />

    <Button
        android:text="Post"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/button"
        android:background="@drawable/post" />

    <TextView
        android:id="@+id/textView"
        android:accessibilityTraversalAfter="@+id/activity_main"
        android:background="@drawable/maru"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="7dp"
        android:layout_above="@+id/button"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="59dp" />

    <TextView
        android:layout_height="100dp"
        android:id="@+id/textView2"
        android:background="@drawable/sikaku"
        android:layout_width="100dp"
        android:layout_above="@+id/textView"
        android:layout_toEndOf="@+id/simoku"
        android:layout_marginBottom="46dp" />
</RelativeLayout>
